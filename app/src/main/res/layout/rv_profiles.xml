<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_marginBottom="15dp"
    android:backgroundTint="#ffffff"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/gray_btn_bg_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            android:layout_margin="0.5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgProfile"
                        android:layout_width="32dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/default_pic"
                        app:civ_border_color="@color/gray_btn_bg_color"
                        app:civ_border_width="0.5dp" />

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvFullName"
                            android:layout_marginLeft="7dp"
                            android:fontFamily="@font/man_semi"
                            android:textColor="#16222E"
                            android:text="John Mark Doe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:src="@drawable/icn_contact"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"/>

                            <TextView
                                android:id="@+id/tvMobileNumber"
                                android:textSize="10dp"
                                android:fontFamily="@font/man_light"
                                android:textColor="#16222E"
                                android:text="09485667816"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <ImageView
                                android:src="@drawable/icn_address"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"/>

                            <TextView
                                android:id="@+id/tvAddress"
                                android:singleLine="true"
                                android:ellipsize="end"
                                android:textSize="10dp"
                                android:fontFamily="@font/man_light"
                                android:textColor="#16222E"
                                android:text="Very Long Address Here"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imgGoToProfile"
                        android:layout_margin="7dp"
                        android:src="@drawable/icn_right"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>

                </LinearLayout>

                <View
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#DFE8EE" />

                <LinearLayout
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/crdService1"
                            android:layout_marginBottom="5dp"
                            app:cardCornerRadius="5dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#F0F4F7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_marginTop="2dp"
                                android:layout_marginBottom="2dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:paddingTop="5dp"
                                    android:paddingBottom="5dp"
                                    android:src="@drawable/icn_circle"
                                    android:layout_width="15dp"
                                    android:layout_height="match_parent"/>

                                <TextView
                                    android:id="@+id/tvService1"
                                    android:textColor="#546679"
                                    android:textSize="12dp"
                                    android:fontFamily="@font/man_semi"
                                    android:text="Babysitting"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/crdServiceOthers"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="5dp"
                            app:cardCornerRadius="5dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#F0F4F7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_marginTop="2dp"
                                android:layout_marginBottom="2dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:paddingTop="2dp"
                                    android:paddingBottom="2dp"
                                    android:src="@drawable/icn_more_tag"
                                    android:layout_width="25dp"
                                    android:layout_height="match_parent"/>

                                <TextView
                                    android:id="@+id/tvServiceOthers"
                                    android:textColor="#546679"
                                    android:textSize="12dp"
                                    android:fontFamily="@font/man_semi"
                                    android:text="Other Services Offered"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/crdService2"
                        android:layout_marginBottom="5dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#F0F4F7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:src="@drawable/icn_circle"
                                android:layout_width="15dp"
                                android:layout_height="match_parent"/>

                            <TextView
                                android:id="@+id/tvService2"
                                android:textColor="#546679"
                                android:textSize="12dp"
                                android:fontFamily="@font/man_semi"
                                android:text="Manicure and Pedicure"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/crdService3"
                        android:layout_marginBottom="5dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#F0F4F7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:src="@drawable/icn_circle"
                                android:layout_width="15dp"
                                android:layout_height="match_parent"/>

                            <TextView
                                android:id="@+id/tvService3"
                                android:textColor="#546679"
                                android:textSize="12dp"
                                android:fontFamily="@font/man_semi"
                                android:text="Electrical Repairs"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/crdService4"
                        android:layout_marginBottom="5dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#F0F4F7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:src="@drawable/icn_circle"
                                android:layout_width="15dp"
                                android:layout_height="match_parent"/>

                            <TextView
                                android:id="@+id/tvService4"
                                android:textColor="#546679"
                                android:textSize="12dp"
                                android:fontFamily="@font/man_semi"
                                android:text="Household Repairs"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>




                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/lnApplaud"
                        android:gravity="left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:padding="2dp"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:src="@drawable/clapping_active"
                                android:layout_width="18dp"
                                android:layout_height="18dp"/>

                            <TextView
                                android:id="@+id/tvCountLeft"
                                android:layout_marginLeft="5dp"
                                android:gravity="center_vertical"
                                android:textSize="10dp"
                                android:fontFamily="@font/man_semi"
                                android:text=" 5.2k"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:gravity="right"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <TextView
                            android:id="@+id/tvCountRight"
                            android:layout_marginLeft="5dp"
                            android:gravity="center_vertical"
                            android:textSize="10dp"
                            android:fontFamily="@font/man_semi"
                            android:text="5.2k Feedback(s) • 3 Schedule(s)"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>

                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#DFE8EE" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/lnIsLiked"
                            android:padding="2dp"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/imgIsLiked"
                                android:src="@drawable/clapping_disabled"
                                android:layout_width="15dp"
                                android:layout_height="15dp"/>

                            <TextView
                                android:layout_marginLeft="5dp"
                                android:gravity="center_vertical"
                                android:textSize="10dp"
                                android:fontFamily="@font/man_semi"
                                android:text="Applause"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"/>

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_marginBottom="1dp"
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="#DFE8EE" />

                    <LinearLayout
                        android:id="@+id/lnFeedBack"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:padding="2dp"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:src="@drawable/feedback"
                                android:layout_width="15dp"
                                android:layout_height="15dp"/>

                            <TextView
                                android:layout_marginLeft="5dp"
                                android:gravity="center_vertical"
                                android:textSize="10dp"
                                android:fontFamily="@font/man_semi"
                                android:text="Feedback"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"/>

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_marginBottom="1dp"
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="#DFE8EE" />

                    <LinearLayout
                        android:id="@+id/lnScheduleTab"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:padding="2dp"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:src="@drawable/menu_schedule"
                                android:layout_width="15dp"
                                android:layout_height="15dp"/>

                            <TextView
                                android:layout_marginLeft="5dp"
                                android:gravity="center_vertical"
                                android:textSize="10dp"
                                android:fontFamily="@font/man_semi"
                                android:text="Schedules"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

</LinearLayout>