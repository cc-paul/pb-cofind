<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_marginLeft="4dp"
            android:gravity="center_vertical"
            android:fontFamily="@font/man_semi"
            android:text="Schedule Details"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/calendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:scaleType="centerInside"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:src="@drawable/clock" />

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/man_semi"
                android:singleLine="true"
                android:text="3:00 PM - 4:00 PM"
                android:textColor="#164978"
                android:textSize="11dp" />

        </LinearLayout>

        <LinearLayout
            android:gravity="right"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:scaleType="centerInside"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/coin" />

                <TextView
                    android:id="@+id/tvMinimumRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/man_semi"
                    android:text="700"
                    android:textColor="#164978"
                    android:textSize="11dp" />

            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tvRemarks"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/man_semi"
        android:text="To anybody who's reading this, I pray that whatever is hurting you or whatever you are constantly stressing about gets better. May the dark thoughts, the overthinking, and the doubt exit your mind. May clarity replace confusion. May peace and calmness fill your life. "
        android:textSize="11dp" />

    <LinearLayout
        android:visibility="gone"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="#164978"
            android:layout_marginLeft="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/man_semi"
            android:text="Highest Bid Amount : "
            android:textSize="11dp" />

        <TextView
            android:id="@+id/tvBidAmount"
            android:layout_marginLeft="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/man_semi"
            android:text="P800"
            android:textSize="11dp" />

    </LinearLayout>

    <TextView
        android:visibility="gone"
        android:layout_marginLeft="4dp"
        android:layout_gravity="left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/man_semi"
        android:gravity="center"
        android:text="Your Bid *" />

    <LinearLayout
        android:visibility="gone"
        android:layout_marginLeft="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/layout_bg">

        <EditText
            android:id="@+id/etBid"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="4dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:ems="10"
            android:fontFamily="@font/man_semi"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:paddingStart="10sp"
            android:paddingEnd="10sp"
            android:textSize="12sp"></EditText>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnAddressHolder"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="4dp"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/man_semi"
            android:gravity="center"
            android:text="Address *" />

        <LinearLayout
            android:layout_marginLeft="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/layout_bg">

            <EditText
                android:id="@+id/etAddress"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_margin="4dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:ems="10"
                android:fontFamily="@font/man_semi"
                android:inputType="textNoSuggestions|text"
                android:maxLines="1"
                android:paddingStart="10sp"
                android:paddingEnd="10sp"
                android:textSize="12sp"></EditText>

        </LinearLayout>

        <CheckBox
            android:id="@+id/chkDefault"
            android:fontFamily="@font/man_semi"
            android:textSize="12sp"
            android:text="Use my default address"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="250dp"
        android:id="@+id/lnSave"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/layout_bg"
        android:backgroundTint="#191645"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/man_semi"
            android:gravity="center"
            android:text="Book"
            android:textColor="@color/white" />


    </LinearLayout>

</LinearLayout>