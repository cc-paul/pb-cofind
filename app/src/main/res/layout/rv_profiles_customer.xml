<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_marginBottom="15dp"
    android:backgroundTint="#ffffff"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/gray_btn_bg_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            android:layout_margin="0.5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgProfile"
                        android:layout_width="32dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/default_pic"
                        app:civ_border_color="@color/gray_btn_bg_color"
                        app:civ_border_width="0.5dp" />

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvFullName"
                            android:layout_marginLeft="7dp"
                            android:fontFamily="@font/man_semi"
                            android:textColor="#16222E"
                            android:text="John Mark Doe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:src="@drawable/icn_contact"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"/>

                            <TextView
                                android:id="@+id/tvMobileNumber"
                                android:textSize="10dp"
                                android:fontFamily="@font/man_light"
                                android:textColor="#16222E"
                                android:text="09485667816"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <ImageView
                                android:src="@drawable/icn_address"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"/>

                            <TextView
                                android:id="@+id/tvAddress"
                                android:singleLine="true"
                                android:ellipsize="end"
                                android:textSize="10dp"
                                android:fontFamily="@font/man_light"
                                android:textColor="#16222E"
                                android:text="Very Long Address Here"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                    </LinearLayout>

                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/imgOptions"
                        android:layout_margin="7dp"
                        android:src="@drawable/icn_more"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>

                </LinearLayout>

                <View
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#DFE8EE" />


                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvAgo"
                        android:textSize="10dp"
                        android:fontFamily="@font/man_extrabold"
                        android:text="Posted 2 Hours ago"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tvPost"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:textSize="10dp"
                        android:fontFamily="@font/man_semi"
                        android:text="Looking for a house cleaner this weekend. Budget P300"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                
                <HorizontalScrollView
                    android:id="@+id/hvImages"
                    android:scrollbars="none"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp">
                        
                        <androidx.cardview.widget.CardView
                            android:id="@+id/crd1"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="5dp"
                            android:layout_width="150dp"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/img1"
                                android:scaleType="centerCrop"
                                android:src="@drawable/sample"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/crd2"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="5dp"
                            android:layout_width="150dp"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/img2"
                                android:scaleType="centerCrop"
                                android:src="@drawable/sample"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/crd3"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="5dp"
                            android:layout_width="150dp"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/img3"
                                android:scaleType="centerCrop"
                                android:src="@drawable/sample"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/crd4"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="5dp"
                            android:layout_width="150dp"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/img4"
                                android:scaleType="centerCrop"
                                android:src="@drawable/sample"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/crd5"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="5dp"
                            android:layout_width="150dp"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/img5"
                                android:scaleType="centerCrop"
                                android:src="@drawable/sample"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>

                        </androidx.cardview.widget.CardView>
                        
                    </LinearLayout>
                    
                </HorizontalScrollView>

                <View
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#DFE8EE" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/lnSendComment"
                        android:gravity="left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:padding="2dp"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:padding="2dp"
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:src="@drawable/feedback"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"/>

                                <TextView
                                    android:layout_marginLeft="5dp"
                                    android:gravity="center_vertical"
                                    android:textSize="10dp"
                                    android:fontFamily="@font/man_semi"
                                    android:text="Send Comment"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"/>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>



                    <LinearLayout
                        android:gravity="right"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <TextView
                            android:id="@+id/tvCountRight"
                            android:layout_marginLeft="5dp"
                            android:gravity="center_vertical"
                            android:textSize="10dp"
                            android:fontFamily="@font/man_semi"
                            android:text="0 Comments"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

</LinearLayout>